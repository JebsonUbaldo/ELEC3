<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/header') %>
</head>
<body class="hold-transition register-page">
  <div class="register-box">
    <div class="card card-outline card-primary">
      <div class="card-header text-center">
        <img src="/images/solevivor_header.png" alt="Solevivor Header Logo" width="100" height="50">
      </div>
      <div class="card-body">
        <h5 class="login-box-msg mb-4">Create Solevivor Account</h5>
  
        <!-- Errors -->
        <% if (typeof (error) !== 'undefined'){ %>
          <div class="text-danger text-start h6 font-weight-bold">
            <%= error %>
          </div>
        <% } %>
  
         <!--Success -->
         <% if (typeof (success) !== 'undefined'){ %>
          <div class="text-success text-start h6 font-weight-bold">
            <%= success %>
          </div>
        <% } %>
  
        <!-- Loop error messages -->
          <% if (typeof (errors) !== 'undefined'){ %> <%
            errors.forEach(function(error) { %>
            <li class="text-danger mb-2">
              <em><%= error.msg %></em>
            </li>
          <% }); %> 
        <% } %>

        <form action="/registerAcc" method="POST">
          <div class="input-group mb-3">
            <input id="fullname" type="text" class="form-control" name="fullname" autocomplete="fullname" placeholder="Fullname">
          </div>

          <div class="input-group mb-3">
            <input id="username" type="text" class="form-control" name="username" autocomplete="username" placeholder="Username">
          </div>

          <div class="input-group mb-3">
            <input data-toggle="password" id="password" type="password" class="form-control" name="password" placeholder="Password">
          </div>

          <div class="input-group mb-3">
            <input data-toggle="password" id="confirm_pass" type="password" class="form-control" name="confirm_pass" placeholder="Confirm Password">
          </div>

          <div class="row">
            <div class="col-12">
              <button type="submit" class="btn btn-primary btn-block mb-5">Register</button>
            </div>
          </div>
        </form>
  
        <div class="mb-4">
          Already have an account? <a href="/login" class="text-center">Login</a>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Scripts -->
  <%- include('../partials/scripts') %>
</body>
</html>