<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/header') %> 
<body class="hold-transition layout-top-nav">
<div class="wrapper">
  <%- include('../partials/navbar-user') %> 

  <% product.forEach(product=> {%>
    <div class="content-wrapper">
      <div class="content-header">
        <div class="container">
          <div class="row mb-2">
            <div class="col-sm-6 mt-4">
              <h1 class="m-0"><%= product.categoryname %></h1>
            </div>
            <div class="col-sm-6 mt-4">
              <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="/client">Home</a></li>
                <li class="breadcrumb-item active"><%= product.categoryname %></li>
                <li class="breadcrumb-item active"><%= product.productname %></li>
              </ol>
            </div>
          </div>
        </div>
      </div>

      <div class="content">
        <div class="container">
          <div class="row">
            <div class="card card-solid">
              <div class="card-body">
                <div class="row">
                  <div class="col-12 col-sm-6">
                    <h3 class="d-inline-block d-sm-none"><%= product.productname %></h3>
                    <div class="col-12">
                      <img src="/images/<%= product.productimg %>" class="product-image mt-4" alt="Product Image">
                    </div>
                    <div class="col-12 product-image-thumbs">
                      <div class="product-image-thumb active"><img src="/images/<%= product.productimg %>" alt="Product Image"></div>
                      <div class="product-image-thumb" ><img src="/images/<%= product.productimg %>" alt="Product Image"></div>
                      <div class="product-image-thumb" ><img src="/images/<%= product.productimg %>" alt="Product Image"></div>
                      <div class="product-image-thumb" ><img src="/images/<%= product.productimg %>" alt="Product Image"></div>
                      <div class="product-image-thumb" ><img src="/images/<%= product.productimg %>" alt="Product Image"></div>
                    </div>
                  </div>
                  <div class="col-12 col-sm-6">
                    <h3 class="mt-3"><%= product.productname %></h3>
                    <p><%= product.categoryname %></p>
                    <h2 class="mb-0">
                      â‚± <%= product.productprice.toLocaleString() %>
                    </h2>
                    <hr>
                    <h4 class="mt-3">Available Sizes</h4>
                    <div class="btn btn-default btn-md btn-flat">
                      US M 4 / W 5.5
                    </div>
                    <div class="btn btn-default btn-md btn-flat">
                      US M 4.5 / W 6
                    </div>
                    <div class="btn btn-default btn-md btn-flat">
                      US M 5 / W 6.5
                    </div>
                    <div class="btn btn-default btn-md btn-flat">
                      US M 5.5 / W 7
                    </div>
                    <div class="btn btn-default btn-md btn-flat">
                      US M 6 / W 7.5
                    </div>
                    <div class="btn btn-default btn-md btn-flat">
                      US M 6.5 / W 8
                    </div>
                    <div class="btn btn-default btn-md btn-flat">
                      US M 7 / W 8.5
                    </div>
                    <div class="btn btn-default btn-md btn-flat">
                      US M 7.5 / W 9
                    </div>
                    <div class="btn btn-default btn-md btn-flat">
                      US M 8 / W 9.5
                    </div>
      
                    <div class="mt-5">
                      <a class="text-white btn btn-primary btn-lg btn-flat" href="/order-now/<%= product.productid %>">
                        <i class="fas fa-cart-plus fa-lg mr-2"></i> Buy Now
                      </a>

                      <!-- <div class="btn btn-default btn-lg btn-flat">
                        <i class="fas fa-heart fa-lg mr-2"></i>
                        Add to Cart
                      </div> -->
      
                      <div class="btn btn-default btn-lg btn-flat">
                        <i class="fas fa-heart fa-lg mr-2"></i>
                        Add to Wishlist
                      </div>
                    </div>
                    <div class="mt-5">
                      <h4 class="mt-3">Product Description</h4>
                      <p><%= product.productdesc %></p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <%}); %>
  </div>

  <%- include('../partials/footer') %> 
</div>

  <%- include('../partials/scripts') %> 
</body>
</html>