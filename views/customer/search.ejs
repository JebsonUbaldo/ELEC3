<%- include('../partials/header') %> <%-
include('../partials/navigation-client') %>
<div class="container mb-5">
  

  <div class="container mb-5" style="background-image: url('/images/R.jpg');">
    <div class="text-start fw-bold h3 mt-3">
      <i class="fas fa-search"></i><span class="fw-bold"> Search: </span> <%= locals.search %>
    </div>
  <div class="row mt-5">
    
    <% if(products.length>0){ %> <% products.forEach(p => { %>
    <div class="col-md-4">
      <div class="card border border-1 mb-4" style="border-radius: 15px">
        <div class="card-body">
          <div class="d-flex justify-content-center mb-3">
            <img
              src="/images/<%= p.productimg %>"
              class="border border-2"
              height="100"
              width="100"
              style="border-radius: 15px"
            />
          </div>
          <hr />
          <div class="h5 fw-bold text-center mb-3"><%= p.productname %></div>

          <div class="d-flex justify-content-between mb-2">
            <div class="h5 text-danger">₱ <%= p.productprice %></div>
          </div>

          <a
            href="/viewProduct/<%= p.productid %>"
            class="btn btn-sm btn-success btn-block"
            >View Details</a
          >
        </div>
      </div>
    </div>

    <%}); %> <%}else{%>
    <div class="text-center">No Products</div>
    <%}%>
  </div>
</div>
</div>
<div style="height: 400px"></div>

<footer class="text-center text-white" style="background-color: #45637d">
  <!-- Grid container -->
  <div class="container p-4">
    <!-- Section: Iframe -->
    <%- include('../partials/footer') %> 
    <!-- Section: Iframe -->
  </div>
  <!-- Grid container -->

  <!-- Copyright -->
  <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2)">
    © 2022 Copyright:
    <a class="text-white" href="https://mdbootstrap.com/">E-Care</a>
  </div>
  <!-- Copyright -->
</footer>
 <% if (typeof (success) !== 'undefined'){
%>
<script>
  Swal.fire({
    title: "Success",
    icon: "success",
    text: "<%= success  %>",
    button: "Okay",
  });
</script>
<% } %>
