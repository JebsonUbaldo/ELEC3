<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/header') %> 
<body class="hold-transition layout-top-nav">
  <div class="wrapper">
    <%- include('../partials/navbar-user') %> 

    <div class="content-wrapper">
      <div class="content-header">
        <div class="container">
          <div class="row mb-2">
            <div class="col-sm-6 mt-5">
              <h1 class="m-0"><%= products[0].categoryname %></h1>
            </div>
          </div>
        </div>
      </div>
  
      <div class="content">
        <div class="container">
          <div class="row">
            <%if(products.length > 0){%> <%products.forEach(product=> {%>
              <div class="col-md-12 col-lg-6 col-xl-4 mb-5">
                <a href="/viewProductCustomer/<%= product.productid %>">
                  <div class="card bg-gradient-dark">
                    <img class="card-img-top" src="/images/<%= product.productimg %>" height="400" alt="Solevivor Shoes">
                  </div>
                </a>
                <h5 class="card-title text-bold"><%= product.productname %></h5>
                <p class="card-text mt-5">
                  â‚± <%= product.productprice.toLocaleString() %>
                </p>
              </div>
            <%});%> <%}else{ %>
              <div class="text-start">No Available Shoess</div>
            <%}%>
          </div>
        </div>
      </div>
    </div>

    <%- include('../partials/footer') %> 
  </div>
  
  <%- include('../partials/scripts') %> 
</body>
</html>